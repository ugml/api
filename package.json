    "test-watch": "mocha --reporter spec --require ts-node/register test/**/*.spec.ts --watch",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "tslint": "tslint --project .",
