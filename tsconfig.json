{
  "compilerOptions": {
    "watch": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "types": [
      // add node as an option
      "node",
      "mocha"
    ],
    "typeRoots" : [
      "node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/config/*.json",
    ".schema.json",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
