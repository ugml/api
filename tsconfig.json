{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es6", "dom"],
    "types": [
      "node",
      "mocha",
      "reflect-metadata"
    ],
    "typeRoots" : [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/config/*.json",
    ".schema.json",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
